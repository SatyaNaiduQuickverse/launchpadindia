{
  "name": "resume-builder-server",
  "version": "1.0.0",
  "description": "Backend server for resume builder",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "PORT=3037 nodemon server.js",
    "migrate": "node scripts/migrate.js",
    "add-column": "node scripts/add-completion-column.js",
    "reset-db": "node scripts/reset-db.js",
    "db-status": "node -e \"require('./config/database').query('SELECT NOW()').then(r => console.log('✅ DB Connected:', r.rows[0].now)).catch(e => console.error('❌ DB Error:', e.message))\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
